<div id="mainBody">
<div class="container">
	<hr class="soften">
	<h1><%= @user.username %> perfil</h1>
	<hr class="soften"/>	
	<div class="row">
		<div class="span4">
		<h4><strong>Username: </strong> <span><%= @user.username %></span><br><br></h4>
		<p>	 <h2>
              <strong> <b>Email:</b><%= @user.email %></strong> <br /><br />
              </h2>
			 <strong> 
			<% if current_page?("/profile") %>
				 <b>Status:</b> 
				 	<%=	to_s_status(@user.status) %> <br><br>

				 <strong><b>Dashboard:</b>
	 				 <%= to_s_moderador(@user.dashboard) %></strong><br /><br />
			<% end %>
			<%= link_to 'Editar', edit_user_path(@user),:class=>'btn btn-primary' %>
	<br><br>
		</p>		
		</div>
			
		<div class="span4">
		<h4>Info</h4><br>
		 <strong> Numero de anuncios activos: <span class="label label-warning"><%= @user.anuncios.where(:activo => 1).length %></span></strong><br /><br />
			<h5> <strong>Numero de negocios realizados <span class="label label-important"><%= @user.anuncios.where(:activo => 0).length %></strong></span></h5>


		</div>


		<div class="span4">
		<h4>Envia-me um email</h4><br>
		<form class="form-horizontal">
        <fieldset>
          <div class="control-group">
           
              <input type="text" placeholder="name" class="input-xlarge"/>
           
          </div>
		   <div class="control-group">
           
              <input type="text" placeholder="email" class="input-xlarge"/>
           
          </div>
		   <div class="control-group">
           
              <input type="text" placeholder="subject" class="input-xlarge"/>
          
          </div>
          <div class="control-group">
              <textarea rows="3" id="textarea" class="input-xlarge"></textarea>
           
          </div>

            <button class="btn " type="submit">Send Messages</button>

        </fieldset>
      </form>
		</div>
	</div>
</div>
</div>

<%= link_to_function "Ver anuncios", "$('.anuncios_user').slideToggle();",:class =>'btn btn-primary' %><br><br>
	<div class="anuncios_user">
		<%= render 'anuncios', collection: @user.anuncios %>
	</div>
<!-- MainBody End ============================= -->