  <div class="span7">
    <div>
      <h3>Destaques</h3>
      <div class="row-fluid">
      <div id="featured" class="carousel slide">
      <div class="carousel-inner">
        <div class="item active">
        <ul class="thumbnails">
        <% i = 0 %>
        <% @destaques1.each do |a| %>

            <li class="span3">
              <div class="thumbnail">
              <i class="tag"></i>
                 <%= link_to  image_tag( a.assets.first.image(:small) ) , a %>
              <div class="caption">
                <%= a.nome %>
                <h4><span class="pull-right"><%= a.preco %></span></h4>
              </div>
              </div>
              <% i +=1 %>
            </li>

        <% end %>
        
        </ul>
        </div>
         <div class="item">
        <ul class="thumbnails">
             <% @destaques2.each do |a| %>
              <%  if a.destaque == true %>
                
                <li class="span3">
                  <div class="thumbnail">
                  <i class="tag"></i>
                     <%= link_to  image_tag( a.assets.first.image(:small) ) , a %>
                  <div class="caption">
                    <%= a.nome %>
                    <h4><span class="pull-right"><%= a.preco %></span></h4>
                  </div>
                  </div>
                </li>

              <% end %>
            <% end %>
          
        </ul>
        </div>
      </div>
        <a class="left carousel-control" href="#featured" data-slide="prev" style="margin-left:-100px;">‹</a>
        <a class="right carousel-control" href="#featured" data-slide="next" style="margin-right:-100px;">›</a>
        </div>
        </div>